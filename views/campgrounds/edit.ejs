<%include ../parcials/header%>
<div class="row">

  <div class="container">
    <h1 style="text-align:center;">Edit '<%=campground.name%>'</h1>
    <div style="width:30%; margin:25px auto">
      <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="post">

        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%=campground.name%>">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" placeholder="imageUrl" value="<%=campground.image%>">
        </div>

        <div class="form-group">
          <input type="text" name="campground[description]" class="form-control" placeholder="description" value="<%=campground.description%>">
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
        </div>

      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%include ../parcials/footer%>
