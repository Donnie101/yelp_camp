<%include ../parcials/header%>
<div class="row">

  <div class="container">
    <h1 style="text-align:center;">Creat A New Campground</h1>
    <div style="width:30%; margin:25px auto">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="imageUrl">
        </div>
        <div class="form-group">
          <input type="text" name="description" class="form-control" placeholder="description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%include ../parcials/footer%>
