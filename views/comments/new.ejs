<%include ../parcials/header%>
<div class="row">

  <div class="container">
    <h1 style="text-align:center;">Add New Campground to '<%=campground.name%>'</h1>
    <div style="width:30%; margin:25px auto">
      <form action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%include ../parcials/footer%>
